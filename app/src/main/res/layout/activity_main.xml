<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/xeditText"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:hint="사이트 주소 입력"
        android:textAlignment="center" />

    <Button
        android:id="@+id/dateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:backgroundTint="#FFA521"
        android:text="CHECK THE BOX OFFICE DATE"
        android:textColor="#010935"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/xbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF9F11"
        android:backgroundTint="#FFA828"
        android:text="Request"
        android:textColor="#E206166E"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:background="#0027FF"
        android:backgroundTint="#0027FF" />


</LinearLayout>